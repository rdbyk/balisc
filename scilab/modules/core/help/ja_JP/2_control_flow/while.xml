    </refsection>
    <refsection>
        <title>履歴</title>
        <revhistory>
            <revision>
                <revnumber>6.0.0</revnumber>
                <revremark>
                    <itemizedlist>
                      <listitem>
                        The <literal>[,else instructions]</literal> syntax is no longer supported.
                      </listitem>
                      <listitem>
                        <literal>while</literal> is now protected:
                        Assignments like <literal>while=1</literal> are no longer possible.
                      </listitem>
                  </itemizedlist>
                </revremark>
            </revision>
        </revhistory>
    </refsection>
</refentry>
