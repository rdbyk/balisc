        <title>Ver Também</title>
        <simplelist type="inline">
            <member>
                <link linkend="eye">eye</link>
            </member>
            <member>
                <link linkend="zeros">zeros</link>
            </member>
        </simplelist>
    </refsection>
</refentry>
